<style>
  :root {
    --color-black: #222222;
    --border-radius: 24px;
  }
  body {
    font-family: "Montserrat", sans-serif;
  }
  .wrapper {
    display: flex;
    justify-content: center;
    padding-inline: 8px;
    padding-bottom: 8px;
  }
  @media (max-width: 1080px) {
    .wrapper {
    }
  }
  .container {
    width: 100%;
    max-width: 1080px;
  }
  @media (min-width: 1080px) {
    .container {
    }
  }
  .header-wrapper {
    position: sticky;
    top: 0;
    padding-top: 8px;
    background-color: white;
  }
  @media (min-width: 1080px) {
    .header-wrapper {
    }
  }
  .header {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
    border: 4px solid var(--color-black);
    width: 100%;
  }
  .main {
    border: 4px solid var(--color-black);
    border-top: none;
  }
  .main-container {
  }
  .main-box {
    display: grid;
    gap: 24px;
    padding-block: 36px;
    padding-inline: 8px;
  }
  .image {
    width: 100%;
    object-fit: cover;
    aspect-ratio: 1;
    background-color: var(--color-black);
  }
  .heading2 {
    font-size: clamp(82px, 8vw, 120px);
    font-weight: 900;
  }
  p {
    font-size: clamp(16px, 2vw, 24px);
    line-height: 1.5;
    letter-spacing: 1px;
  }
  .section {
    display: grid;
    gap: 24px;
    padding-block: 36px;
    padding-inline: 8px;
    border-top: 4px solid var(--color-black);
  }
  .heading3 {
    font-size: clamp(48px, 5vw, 64px);
    color: #fdfdfd;
    -webkit-text-stroke: 1px var(--color-black);
    font-weight: 900;
  }
  .heading4 {
    width: fit-content;
    padding-inline: 8px;
    background-color: var(--color-black);
    color: white;
    font-size: clamp(24px, 3vw, 36px);
  }
  .list {
    display: grid;
    gap: 36px;
  }
  article {
    display: grid;
    gap: 16px;
  }
  .footer {
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    border: 4px solid var(--color-black);
    border-top: none;
    padding-block: 36px;
    padding-inline: 8px;
  }
  .footer-container {
    display: grid;
    gap: 16px;
  }
  .heading5 {
