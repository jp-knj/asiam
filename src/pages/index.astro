---
import "../styles/destyle.css";
import Logo from "../ui/Logo/Logo";
import NavigationBar from "../ui/NavigationBar/NavigationBar.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JP-KNJ</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <div class="header-wrapper">
          <header class="header">
            <Logo client:load />
            <NavigationBar />
          </header>
        </div>
        <main class="main">
          <h1>Hello, Astro!</h1>
        </main>
        <footer class="footer"></footer>
      </div>
    </div>
  </body>
</html>
<style>
  :root {
    --color-black: #222222;
    --border-radius: 24px;
  }
  body {
    font-family: "Montserrat", sans-serif;
  }
  .wrapper {
    display: flex;
    justify-content: center;
    padding-inline: 8px;
    padding-bottom: 8px;
  }
  @media (max-width: 1080px) {
    .wrapper {
      <!--todo: PCの場合はpaddingを入れる-->;
    }
  }
  .container {
    width: 100%;
    max-width: 1080px;
  }
  @media (min-width: 1080px) {
    .container {
      <!--todo: PCの場合はpaddingを入れる-->;
    }
  }
  .header-wrapper {
    position: sticky;
    top: 0;
    padding-top: 8px;
    background-color: white;
  }
  @media (min-width: 1080px) {
    .header-wrapper {
      <!--todo: PCの場合はpaddingを入れる-->;
    }
  }
  .header {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
    border: 4px solid var(--color-black);
    width: 100%;
  }
  .main {
    border: 4px solid var(--color-black);
    border-top: none;
    height: 300vh;
  }
  .footer {
    border-bottom-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    border: 4px solid var(--color-black);
    border-top: none;
    height: 100px;
  }
</style>
